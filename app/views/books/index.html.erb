<h1>Books</h1>

<table>
    <thead>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th></thead>
    <tbody>
        <% @books.each do |book| %>
        <tr>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
            <td><%= link_to "show", book_path(book.id) %></td>
            <td><%= link_to "Edit", edit_book_path(book.id) %></td>
            <td><%= link_to "destroy", destroy_book_path(book.id), method: :delete, "date-confirm" => "Are you sure?" %></td>
        </tr>
        <% end %>
</table>

<div>
    <%= flash[:notice] %>
</div>

<h2>New book</h2>

<% if @book.errors.any? %>
    <%= @book.errors.count %>error prohibited this book from being saved
    <ul>
        <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
    </ul>
<% end %>

<%= form_with model: @book do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    
    <h4>Body</h4>
    <%= f.text_field :body %>
    
    <%= f.submit 'Create Book' %>
<% end %>